<!DOCTYPE html>
<html lang="en">
<%- include('partials/head') %>

  <body id="page-top">
    <div id="wrapper">
      <%- include('partials/sidebar') %>

        <div id="content-wrapper" class="d-flex flex-column">
          <div id="content">
            <%- include('partials/topbar') %>

              <!-- Begin Page Content -->
              <div class="container-fluid">
                <h1 class="h3 mb-4 text-gray-800">Users</h1>
                <h2 class="h4 mb-4 text-gray-800">This is data of Users</h2>
              </div>
              <div class="container-fluid">

                <div class="card-header py-3">
                  <a href="/users/add" class="btn btn-primary btn-icon-split">
                    <span class="icon text-white-50">
                      <i class="fa fa-plus"></i>
                    </span>
                    <span class="text">Add</span>
                  </a>
                </div>


                <div class="card shadow mb-4">
                  <div class="card-body">
                    <div class="table-responsive">
                      <table id="myTable" class="table table-bordered">
                        <thead>
                          <tr>
                            <th>User ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Actions</th>
                          </tr>
                        </thead>
                        <tfoot>
                          <tr>
                            <th>User ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Actions</th>
                          </tr>
                        </tfoot>
                        <tbody>
                          <% users.forEach(user=> { %>
                            <tr>
                              <td>
                                <%= user.userid %>
                              </td>
                              <td>
                                <%= user.name %>
                              </td>
                              <td>
                                <%= user.email %>
                              </td>
                              <td>
                                <%= user.role %>
                              </td>
                              <td>
                                <button type="button"
                                  class="btn btn-sm btn-success btn-edit rounded-circle  align-items-center justify-content-center"
                                  data-id="<%= user.userid %>"
                                  data-entity = "users">
                                  
                                  <i class="fas fa-info-circle"></i>
                                </button>
                                <button
                                  class="btn btn-sm btn-danger btn-delete rounded-circle  align-items-center justify-content-center"
                                  data-id="<%= user.userid %>"
                                  data-entity = "users">
                                  <i class="fas fa-trash"></i>
                                </button>
                              </td>
                            </tr>
                            <% }) %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>

          </div>
        </div>



        <%- include('partials/footer') %>
    </div>
    </div>
  </body>

</html>