<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Change Avatar</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

  <style>
    .avatar-preview {
      width: 200px;
      height: 200px;
      border-radius: 0;
      object-fit: cover;
      border: 2px solid #ddd;
      display: block;
    }
    .avatar-default {
      width: 200px;
      height: 200px;
      border: 2px solid #ddd;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 100px;
      color: #888;
      background: #f8f9fa;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h2 class="text-center mb-4">Change Avatar</h2>
    <div class="card p-4 shadow">
      <form action="/users/avatar" method="POST" enctype="multipart/form-data">
        <div class="mb-3 row">
          <label for="avatar" class="col-sm-2 col-form-label">Avatar</label>
          <div class="col-sm-10">
            <input type="file" class="form-control" id="avatar" name="avatar" accept="image/*" required>
          </div>
        </div>

        <div class="mb-3 row">
          <label class="col-sm-2 col-form-label">Preview</label>
          <div class="col-sm-10">
            <% if (user.avatar) { %>
              <img id="preview" class="avatar-preview"
                src="/uploads/<%= user.avatar %>"
                alt="avatar preview">
            <% } else { %>
              <div id="previewDefault" class="avatar-default">
                <i class="fa-solid fa-user"></i>
              </div>
              <img id="previewImg" class="avatar-preview d-none" alt="avatar preview">
            <% } %>
          </div>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/" class="btn btn-secondary">Cancel</a>
      </form>
    </div>
  </div>

  <script>
    document.getElementById('avatar').addEventListener('change', function(event) {
      const [file] = event.target.files;
      if (file) {
        // kalau sebelumnya default icon, sembunyikan dan tampilkan img
        const previewDefault = document.getElementById('previewDefault');
        const previewImg = document.getElementById('previewImg') || document.getElementById('preview');
        
        if (previewDefault) previewDefault.classList.add('d-none');
        previewImg.classList.remove('d-none');
        previewImg.src = URL.createObjectURL(file);
      }
    });
  </script>
</body>
</html>
